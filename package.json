{
  "name": "shim-arib-html5",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx server/server.ts",
    "start": "node dist-server/server.js",
    "watch:client": "rollup -c rollup.config.ts --configPlugin typescript --watch",
    "build": "npm run build:client && npm run build:server",
    "build:client": "rollup -c rollup.config.ts --configPlugin typescript",
    "build:server": "tsc -p tsconfig.server.json",
    "format": "prettier --write sw shim server player *.ts --tab-width 4 --print-width 120"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.0.3",
    "prettier": "^3.7.4",
    "rollup": "^4.55.1",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "arib-mmt-tlv-ts": "^1.1.1",
    "hono": "^4.11.3",
    "mpegts.js": "https://github.com/otya128/mpegts.js/releases/download/1.7.3-mmttlv-2/mpegts.js-1.7.3-mmttlv-2.tgz"
  }
